<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Dashboard"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/main_menu">

    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/playlist"
            android:layout_width="136dp"
            android:layout_height="117dp"
            android:layout_marginStart="32dp"
            android:background="@android:color/holo_orange_light"
            app:icon="@drawable/ic_baseline_library_music_24"
            app:iconSize="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/songs"
            app:layout_constraintEnd_toStartOf="@+id/songs"
            app:layout_constraintHorizontal_bias="0.278"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/songs"
            android:layout_width="136dp"
            android:layout_height="117dp"
            android:layout_marginEnd="28dp"
            android:background="@android:color/holo_orange_light"
            app:icon="@drawable/ic_baseline_play_circle_outline_24"
            app:iconSize="100dp"
            app:layout_constraintBottom_toTopOf="@+id/lyrics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.555" />

        <Button
            android:id="@+id/lyrics"
            android:layout_width="136dp"
            android:layout_height="117dp"
            android:background="@android:color/holo_orange_light"
            app:icon="@drawable/ic_baseline_music_note_24"
            app:iconSize="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/request"
            app:layout_constraintEnd_toStartOf="@+id/request"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/request"
            android:layout_width="136dp"
            android:layout_height="117dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="204dp"
            android:background="@android:color/holo_orange_light"
            app:icon="@drawable/ic_baseline_contact_support_24"
            app:iconSize="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.drawerlayout.widget.DrawerLayout>